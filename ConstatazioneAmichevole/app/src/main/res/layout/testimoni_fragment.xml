<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="testimoni"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:text="cognome"/>

    <EditText
        android:layout_width="wrap_content"
        android:hint="Inserisci il tuo cognome"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:text="nome"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:hint="Inserisci il nome"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:text="indirizzo"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:hint="Inserisci indirizzo"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:text="telefono"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:hint="Inserisci numero di telefono"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:text="presenza veicolo A o B"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:hint="Inserisci locazione"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:textSize="25dp"
        android:layout_marginTop="50dp"
        android:text="Modifica"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />

</LinearLayout>