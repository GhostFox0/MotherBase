<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:background="#ffffff"
    android:fillViewport="false"
    android:id="@+id/wrapper">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="@drawable/medicine_back" />

        <ImageButton
            android:id="@+id/user_medicine_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/heart_pulse"
            android:background="@drawable/circular_border_imageview" />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:background="@color/teal"
            android:elevation="4dp"
            android:paddingBottom="24dp">


            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="76dp"
                android:text="Nome Medicina"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_layout"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivContactItem1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:src="@drawable/ic_person_pin_circle_black_24dp" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="#008080"
                    android:textColorHighlight="#ffffff"
                    android:textColorHint="#008080"
                    android:theme="@style/TextLabel2"
                    android:background="#ffffff">
                    <EditText
                        android:id="@+id/input_nome_medicina"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:padding="20dp"
                        android:hint="Nome della medicina"
                        android:textColorHint="#008080"
                        android:singleLine="false"
                        android:backgroundTint="#008080"
                        android:textColor="#008080"
                        android:textColorHighlight="#01579b" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_layout"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivContactItem2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:src="@drawable/ic_person_pin_circle_black_24dp" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="#008080"
                    android:textColorHighlight="#ffffff"
                    android:textColorHint="#008080"
                    android:theme="@style/TextLabel2"
                    android:background="#ffffff">
                    <EditText
                        android:id="@+id/input_numero_medicine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:padding="20dp"
                        android:hint="Numero di medicine"
                        android:textColorHint="#008080"
                        android:singleLine="false"
                        android:backgroundTint="#008080"
                        android:textColor="#008080"
                        android:textColorHighlight="#01579b" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_layout"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivContactItem3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:src="@drawable/ic_date_range_black_24dp" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="#008080"
                    android:textColorHighlight="#ffffff"
                    android:textColorHint="#008080"
                    android:theme="@style/TextLabel2"
                    android:background="#ffffff">
                    <EditText
                        android:id="@+id/input_numero_scatole"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:padding="20dp"
                        android:hint="Numero di scatole"
                        android:textColorHint="#008080"
                        android:singleLine="false"
                        android:backgroundTint="#008080"
                        android:textColor="#008080"
                        android:textColorHighlight="#01579b" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_layout"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivContactItem4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:src="@drawable/bank" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="#008080"
                    android:textColorHighlight="#ffffff"
                    android:textColorHint="#008080"
                    android:theme="@style/TextLabel2"
                    android:background="#ffffff">
                    <EditText
                        android:id="@+id/input_dosaggio_giornaliero"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:padding="20dp"
                        android:hint="Dosaggio"
                        android:textColorHint="#008080"
                        android:singleLine="false"
                        android:backgroundTint="#008080"
                        android:textColor="#008080"
                        android:textColorHighlight="#01579b" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_layout"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivContactItem5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:src="@drawable/gender_male_female" />

                <Spinner
                    android:id="@+id/spinnerMisura"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="#008080"
                    android:textColorHint="#008080"
                    android:elevation="4dp"
                    android:padding="20dp"
                    android:hint="Misura"
                    android:clickable="true"
                    android:singleLine="false"
                    android:textColorHighlight="#01579b" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="#008080"
                    android:textColorHighlight="#ffffff"
                    android:textColorHint="#008080"
                    android:theme="@style/TextLabel2"
                    android:background="#ffffff">
                    <EditText
                        android:id="@+id/input_sesso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:padding="20dp"
                        android:hint="Sesso"
                        android:textColorHint="#008080"
                        android:singleLine="false"
                        android:backgroundTint="#008080"
                        android:textColor="#008080"
                        android:textColorHighlight="#01579b" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_layout"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivContactItem7"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:src="@drawable/home_map_marker" />


                <DatePicker
                    android:id="@+id/dataAssunzione"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="#008080"
                    android:elevation="4dp"
                    android:padding="20dp"
                    />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="#008080"
                    android:textColorHighlight="#ffffff"
                    android:textColorHint="#008080"
                    android:theme="@style/TextLabel2"
                    android:background="#ffffff">
                    <EditText
                        android:id="@+id/input_indirizzo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:padding="20dp"
                        android:hint="Indirizzo"
                        android:textColorHint="#008080"
                        android:singleLine="false"
                        android:backgroundTint="#008080"
                        android:textColor="#008080"
                        android:textColorHighlight="#01579b" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_layout"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivContactItem6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:src="@drawable/account_card_details" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#008080"
                    android:textColorHighlight="#ffffff"
                    android:textColorHint="#008080"
                    android:theme="@style/TextLabel2"
                    android:background="#ffffff">
                    <EditText
                        android:id="@+id/input_giorni_preavviso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:padding="20dp"
                    android:textColor="#008080"
                    android:hint="Giorni preavviso"
                    android:textColorHint="#008080"
                    android:singleLine="false"
                        android:textColorHighlight="#01579b"
                    android:background="#ffffff">
                </EditText>
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_layout"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_inserisci"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Inserisci"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="24dp"
                    android:padding="12dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:background="@color/material_deep_teal_500" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>