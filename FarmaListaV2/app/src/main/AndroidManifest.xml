<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.its.samuele.farmalistav2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        android:name="com.its.samuele.farmalistav2.App">
        
        <activity
            android:name="com.its.samuele.farmalistav2.ui.LoginActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.PresentationActivity"
            android:theme="@style/AppTheme">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.LoginActivity"/>

        </activity>

        <activity android:name=".ui.AppActivity"
            android:theme="@style/AppTheme">
        </activity>

    </application>

</manifest>