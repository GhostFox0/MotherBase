<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/tealPrimary">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/tealPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tealPrimary">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="25dp"
            android:background="@color/teal">

            <TextView
                android:text="FarmaLista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:id="@+id/textView"
                android:textColor="@color/colorBackgroundFloatingLight"
                android:textStyle="normal|bold|italic"
                style="@style/Base.TextAppearance.AppCompat.Headline"
                android:gravity="center_horizontal" />

            <ImageView
                android:id="@+id/imageView"
                android:src="@drawable/icon2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="38dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/editTextLogEmail"
                android:background="@android:color/background_light"
                android:hint="Inserisci email"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:textStyle="normal|bold"
                android:textSize="24sp"
                android:textColor="@color/teal"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical|center_horizontal" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:layout_below="@+id/editTextLogEmail"
                android:layout_alignStart="@+id/editTextLogEmail"
                android:layout_marginTop="30dp"
                android:id="@+id/editTextLogPass"
                android:background="@android:color/background_light"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                android:hint="Inserisci password"
                android:textColor="@color/teal"
                android:singleLine="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center_vertical|center_horizontal" />

            <TextView
                android:text="Non sei registrato? Clicca qui per registrarti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="54dp"
                android:id="@+id/textViewLogRegLink"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/background_light"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginBottom="25dp" />

            <Button
                android:text="Accedi"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/buttonLogin"
                android:layout_weight="1"
                android:background="@color/colorBackgroundFloatingDark"
                android:textColor="@color/colorBackgroundFloatingLight" />

        </LinearLayout>

    </RelativeLayout>
    </ScrollView>
</FrameLayout>